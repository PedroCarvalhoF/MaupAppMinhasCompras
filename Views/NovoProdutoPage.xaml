<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinhasCompras.Views.NovoProdutoPage"
             Title="Novo Produto">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar"
                     x:Name="mnSalvarProduto"
                     Clicked="mnSalvarProduto_Clicked" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Margin="10"
                         Spacing="10">
        <Label Text="Descrição do Produto:"></Label>
        <Entry x:Name="txtDescricaoProduto" />
        <Label Text="Quantidade:"></Label>
        <Entry x:Name="txtQuantidadeProduto"
               Keyboard="Numeric" />
        <Label Text="Preço Unitario:"></Label>
        <Entry x:Name="txtPrecoUnitario"
               Keyboard="Numeric" Completed="txtPrecoUnitario_Completed"/>
    </VerticalStackLayout>
</ContentPage>